<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020107"
    tools:context=".HelpPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="731dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:text="OBIETTIVO DEL GIOCO:"
        android:textAlignment="center"
        android:textColor="#6C0909"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="729dp"
        android:layout_height="195dp"
        android:layout_marginTop="30dp"
        android:text="Sei rimasto solo, il pianeta è invaso da mostri, il cui unico scopo è ucciderti. Muoviti con il cursore e spara con il tuo fucile al plasma. Rimani in vita più tempo possibile!"
        android:textAlignment="center"
        android:textColor="#FAF4F4"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="312dp"
        android:layout_marginTop="10dp"
        android:onClick="backToTitle"
        android:text="INDIETRO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>