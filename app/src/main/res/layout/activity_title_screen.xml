<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020107"
    tools:context=".TitleScreen">

    <Button
        android:id="@+id/button2"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="20dp"
        android:onClick="helpOnScreen"
        android:text="HELP"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="20dp"
        android:onClick="finishGame"
        android:text="EXIT"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="405dp"
        android:layout_height="61dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="50dp"
        android:text="NUCLEARIZATION"
        android:textColor="#AF1414"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_marginLeft="297dp"
        android:layout_marginTop="50dp"
        android:onClick="gameOnScreen"
        android:text="START"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>